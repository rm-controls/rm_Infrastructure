<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:property name="threshold" value="0.1"/>
    <xacro:property name="pitch_lower_limit" value="-0.583"/>
    <xacro:property name="pitch_upper_limit" value="0.562"/>

    <link name="yaw">
        <inertial>
            <mass value="2.497"/>
            <origin xyz="0.014616 -0.007729 -0.004103"/>
            <inertia ixx="1.039e-2" ixy="1.575e-3" ixz="-2.149e-3" iyy="1.181e-2"
                     iyz="1.267e-3" izz="6.380e-3"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/standard/yaw.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rm_description/meshes/standard/yaw.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
        </link>

        <joint name="yaw_joint" type="revolute">
            <origin xyz="0 0 0.162"
                    rpy="0 0 0"/>
            <dynamics damping="0.0" friction="0.1"/>
            <limit effort="1.2" velocity="31" lower="-1e10" upper="1e10"/>
            <parent link="base_link"/>
            <child link="yaw"/>
            <axis xyz="0 0 1"/>
        </joint>

        <link name="pitch">
            <inertial>
                <mass value="2.244065"/>
                <origin xyz="0.00115 -0.0128 0.0253"/>
                <inertia ixx="9.63e-3" ixy="-4.829e-3" ixz="-1.382e-3" iyy="1.723e-2"
                         iyz="-1.088e-3" izz="1.867e-2"/>
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://rm_description/meshes/standard/pitch.stl" scale="0.001 0.001 0.001"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://rm_description/meshes/standard/pitch.stl" scale="0.001 0.001 0.001"/>
                </geometry>
            </collision>
        </link>

        <joint name="pitch_joint" type="revolute">
            <origin xyz="0 0 0.129897" rpy="0 0 0"/>
            <dynamics damping="0.0" friction="0.1"/>
            <limit effort="1.2" velocity="13.82" lower="${pitch_lower_limit}" upper="${pitch_upper_limit}"/>
            <safety_controller k_position="100" k_velocity="0.1"
                               soft_lower_limit="${pitch_lower_limit+threshold}"
                               soft_upper_limit="${pitch_upper_limit-threshold}"/>
            <parent link="yaw"/>
            <child link="pitch"/>
            <axis xyz="0 1 0 "/>
        </joint>

</robot>
